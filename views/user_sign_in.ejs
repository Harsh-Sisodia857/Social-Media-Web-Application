<h1 class="text-primary text-center fs-1 fw-bold">Sign In</h1>
<div class="d-block mx-auto mt-5 border container">
    <form action="/users/create-session" method="POST">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="email">Email</label>
                <input name="email" type="email" class="form-control" id="email" placeholder="Email">
            </div>
            <div class="form-group col-md-6">
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control" id="password" placeholder="Password">
            </div>
        </div>
        <div class="d-grid gap-2 col-1 mx-auto">
            <button type="submit" class="btn btn-primary m-3">Sign in</button>
        </div>
    </form>
</div>


