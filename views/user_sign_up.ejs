<h1 class="text-primary text-center fs-1 fw-bold">Sign Up</h1>

<div class="d-block border w-70 container">
    <form action="/users/create" method="POST">
        <div class="row mb-3">
            <div class="form-group col-md-6">
                <label for="inputName mb-2">Name</label>
                <input type="text" name="name" class="form-control" id="inputName" placeholder="Name" required>
            </div>
            <div>
                <label for="email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" name="email" class="form-control" id="email" required>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div>
                <label for="inputPassword"  class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" name="password" class="form-control" id="inputPassword" required>
                </div>
            </div>
            <div>
                <label for="confirmPassword" class="col-sm-2 col-form-label">Confirm Password</label>
                <div class="col-sm-10">
                    <input type="password" name="confirm_password" class="form-control" id=confirmPassword" required>
                </div>
            </div>
        </div>
        <fieldset class="row mb-3">
            <div>
                <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Gender" id="gridRadios" value="Male">
                        <label class="form-check-label" for="gridRadios">
                            Male
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Gender" id="gridRadios" value="Female">
                        <label class="form-check-label" for="gridRadios">
                            Female
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Gender" id="gridRadios" value="Other">
                        <label class="form-check-label" for="gridRadios">
                            Other
                        </label>
                    </div>

                </div>
            </div>
        </fieldset>
        <div class="col-md-3">
            <label for="validationDefault04" class="form-label">Country</label>
            <select name="Country" class="form-select" id="validationDefault04" required>
                <option value="USA">USA</option>
                <option value="UK">UK</option>
                <option value="India" selected>India</option>
                <option value="Japan">Japan</option>
            </select>
        </div>

        <div class="col-md-3">
            <label for="validationDefault04" class="form-label">State</label>
            <select name="State" class="form-select" id="validationDefault04" required>
                <option value="Uttarpradesh" selected>Uttarpradesh</option>
                <option value="Uttrakhand">Uttrakhand</option>
                <option value="Jharkhand">Jharkhand</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="validationDefault03" class="form-label">City</label>
            <input name="city" type="text" class="form-control" id="validationDefault03" required>
        </div>
        <div class="d-grid gap-1 col-2 mx-auto">
            <button type="submit" class="btn btn-primary m-3 w-auto">Sign Up</button>
        </div>
    </form>
</div>